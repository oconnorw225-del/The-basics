{
  "errorHandler": {
    "logErrors": true,
    "logPath": "./logs/errors.log",
    "notifyOnError": true,
    "notifyWebhook": "",
    "maxRetries": 3,
    "retryDelay": 1000,
    "circuitBreakerThreshold": 5,
    "fatalErrorExitDelay": 1000
  },
  "healthMonitor": {
    "heartbeatInterval": 5000,
    "memoryThreshold": 0.9,
    "cpuThreshold": 0.8,
    "checkInterval": 10000,
    "autoRestart": true,
    "maxRestarts": 5,
    "freezeTimeout": 30000,
    "restartExitDelay": 1000
  },
  "shutdownHandler": {
    "gracePeriod": 30000,
    "forceShutdownDelay": 5000
  },
  "features": {
    "trading": {
      "enabled": false,
      "critical": false,
      "autoStart": true,
      "dependencies": []
    },
    "freelance": {
      "enabled": true,
      "critical": true,
      "autoStart": true,
      "dependencies": ["ai"]
    },
    "ai": {
      "enabled": true,
      "critical": true,
      "autoStart": true,
      "dependencies": []
    },
    "payments": {
      "enabled": true,
      "critical": false,
      "autoStart": true,
      "dependencies": []
    },
    "database": {
      "enabled": true,
      "critical": true,
      "autoStart": true,
      "dependencies": []
    },
    "dashboard": {
      "enabled": true,
      "critical": false,
      "autoStart": true,
      "dependencies": ["database"]
    }
  }
}

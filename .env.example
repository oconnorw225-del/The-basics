# NDAX Quantum Engine - Environment Configuration
# Copy this file to .env and configure for your environment

# ==========================================
# Node.js Configuration
# ==========================================
NODE_ENV=development
PORT=3000

# ==========================================
# Python Backend Configuration
# ==========================================
PYTHON_PORT=8000

# ==========================================
# Trading Configuration
# ==========================================
# Trading mode: paper (safe testing) or live (real trading)
TRADING_MODE=paper
TRADING_ENABLED=false

# Auto-start trading on bot launch
AUTO_START=false

# Maximum concurrent trades
MAX_TRADES=5

# Risk level: low, medium, high
RISK_LEVEL=low

# Bot Limits
MAX_DAILY_LOSS=100
MAX_POSITION_SIZE=1000

# ==========================================
# Bot Configuration
# ==========================================
BOT_PORT=9000

# ==========================================
# Frontend Configuration
# ==========================================
# API URL for frontend to connect to backend
VITE_API_URL=http://localhost:8000

# ==========================================
# NDAX API Credentials (Optional)
# ==========================================
# Get these from https://ndax.io/
# REQUIRED for live trading, optional for paper trading
# NDAX_API_KEY=your_api_key_here
# NDAX_API_SECRET=your_api_secret_here
# NDAX_USER_ID=your_user_id

# ==========================================
# Database Configuration (Optional)
# ==========================================
# DATABASE_URL=postgresql://user:pass@localhost:5432/ndax

# Application
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Security
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=GENERATE_THIS_WITH_COMMAND_ABOVE_DO_NOT_USE_THIS_PLACEHOLDER
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# API Keys
API_KEY=your_api_key_here
NDAX_API_KEY=your_ndax_api_key
NDAX_API_SECRET=your_ndax_secret

# AWS (if using)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Trading (Safety defaults)
AUTO_BID=false
PAPER_TRADING=true
MAX_POSITION_SIZE=100
RISK_LIMIT_PERCENT=2

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30000

# Feature Flags
ENABLE_AI_TRADING=false
ENABLE_ADVANCED_ANALYTICS=true

# ==========================================
# Logging Configuration
# ==========================================
# Log level: DEBUG, INFO, WARN, ERROR, FATAL
LOG_LEVEL=INFO

# Log format: json or text
# LOG_FORMAT=json

# Maximum log file size in bytes (10MB default)
# LOG_MAX_BYTES=10485760

# Number of log backup files to keep
# LOG_BACKUP_COUNT=5

# ==========================================
# System Integration & Monitoring
# ==========================================
# Health check interval in seconds
HEALTH_CHECK_INTERVAL=60

# Freeze detection thresholds (seconds)
FREEZE_SOFT_THRESHOLD=60
FREEZE_HARD_THRESHOLD=300

# Error handling configuration
MAX_RETRIES=3
RETRY_BACKOFF_BASE=2.0

# Circuit breaker configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=300

# ==========================================
# Service Features
# ==========================================
# Enable/disable services
BOT_ENABLED=true
FREELANCE_ENABLED=false
AI_ENABLED=false

# AI task queue configuration
MAX_CONCURRENT_TASKS=5
TASK_QUEUE_SIZE=100

# API Gateway configuration
API_RATE_LIMIT=100

# ==========================================
# Deployment Configuration
# ==========================================
# Railway, Heroku, or custom deployment
# DEPLOYMENT_PLATFORM=railway

# Railway (if deploying)
# RAILWAY_TOKEN=your_railway_token

# GitHub (for automation)
# GITHUB_TOKEN=your_github_token
# GITHUB_USERNAME=oconnorw225-del

# ==========================================
# Notification Webhooks (Optional)
# ==========================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# ==========================================
# API Keys (Optional)
# ==========================================
# OPENAI_API_KEY=your_openai_key
# ANTHROPIC_API_KEY=your_anthropic_key

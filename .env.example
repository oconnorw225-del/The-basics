# ===== PROJECT CHIMERA ENVIRONMENT CONFIGURATION =====
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==========================================
# CHIMERA CONFIGURATION
# ==========================================
CHIMERA_VERSION=8.0
CHIMERA_MODE=production  # development, staging, production

# ==========================================
# Node.js Configuration
# ==========================================
NODE_ENV=development
PORT=3000

# ==========================================
# Python Backend Configuration
# ==========================================
PYTHON_PORT=8000
PYTHONPATH=.

# ==========================================
# Trading Configuration
# ==========================================
# Trading mode: paper (safe testing) or live (real trading)
TRADING_MODE=paper

# Auto-start trading on bot launch
AUTO_START=false

# Maximum concurrent trades
MAX_TRADES=5

# Risk level: low, medium, high
RISK_LEVEL=low

# ==========================================
# Bot Configuration
# ==========================================
BOT_PORT=9000

# ==========================================
# Frontend Configuration
# ==========================================
# API URL for frontend to connect to backend
VITE_API_URL=http://localhost:8000

# ==========================================
# NDAX API Credentials (Optional)
# ==========================================
# Get these from https://ndax.io/
# REQUIRED for live trading, optional for paper trading
# IMPORTANT: Uncomment these lines in your local .env file and set real values.
# NDAX_API_KEY=your_api_key_here
# NDAX_API_SECRET=your_api_secret_here
# NDAX_ACCOUNT_ID=your_account_id_here

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=chimera_db
POSTGRES_USER=chimera_user
POSTGRES_PASSWORD=your_secure_password_here

# MongoDB
MONGODB_URI=mongodb://localhost:27017/chimera
MONGODB_DB=chimera_data

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# DATABASE_URL=postgresql://user:pass@localhost:5432/ndax

# ==========================================
# BLOCKCHAIN & WEB3 CONFIGURATION
# ==========================================
# Blockchain RPCs
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Web3 Providers
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key

# WARNING: Never store private keys or mnemonics in .env!
# Use hardware wallets or secure key management systems
WALLET_ENCRYPTION_KEY=generate_secure_random_key_here
TREASURY_ADDRESS=0x0000000000000000000000000000000000000000

# ==========================================
# FREELANCE ENGINE
# ==========================================
UPWORK_API_KEY=your_upwork_api_key
FREELANCER_API_KEY=your_freelancer_api_key
TOPTAL_API_KEY=your_toptal_api_key

# ==========================================
# PAYMENT PROCESSING
# ==========================================
STRIPE_API_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==========================================
# Security Configuration
# ==========================================
# JWT secret for authentication
JWT_SECRET=your_secure_random_string_here
SESSION_SECRET=generate_secure_random_session_secret_here
ENCRYPTION_KEY=generate_secure_32_byte_key_here

# API rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ==========================================
# MONITORING & OBSERVABILITY
# ==========================================
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project
LOG_LEVEL=info  # debug, info, warn, error
ENABLE_METRICS=true

# ==========================================
# AI/ML CONFIGURATION
# ==========================================
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==========================================
# GITHUB CONFIGURATION
# ==========================================
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_USERNAME=oconnorw225-del

# ==========================================
# CLOUD SERVICES
# ==========================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Railway
RAILWAY_TOKEN=your_railway_token_here

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_AUTO_TRADING=false
ENABLE_FREELANCE_ENGINE=false
ENABLE_SELF_LEARNING=true
ENABLE_MULTI_CHAIN=false
ENABLE_QUANTUM_MODE=false

# ==========================================
# LIMITS & THRESHOLDS
# ==========================================
MAX_TRADE_SIZE=1000
MIN_TREASURY_RESERVE=10000
RISK_TOLERANCE=0.05
AUTO_SHUTDOWN_LOSS_THRESHOLD=0.20

# ==========================================
# NOTIFICATIONS
# ==========================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# ==========================================
# BACKUP CONFIGURATION
# ==========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 0 * * *  # Daily at midnight
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=chimera-backups

# ==========================================
# Deployment Configuration
# ==========================================
# Railway, Heroku, or custom deployment
DEPLOYMENT_PLATFORM=railway

# ==========================================
# NOTES
# ==========================================
# 1. Generate secure random keys: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 2. Never commit .env file to version control
# 3. Use environment-specific files (.env.development, .env.production)
# 4. Rotate credentials regularly
# 5. Use secret management services in production (AWS Secrets Manager, HashiCorp Vault)


# The-basics System - Comprehensive Environment Configuration
# Copy this file to .env and configure for your environment
# SECURITY: Never commit the .env file with real credentials!

# ==========================================
# Node.js Configuration
# ==========================================
NODE_ENV=development
PORT=3000

# ==========================================
# Python Backend Configuration
# ==========================================
PYTHON_PORT=8000

# ==========================================
# Trading Configuration
# ==========================================
# Trading mode: paper (safe testing) or live (real trading)
TRADING_MODE=paper

# Auto-start trading on bot launch
AUTO_START=false

# Maximum concurrent trades
MAX_TRADES=5

# Risk level: low, medium, high
RISK_LEVEL=low

# ==========================================
# Bot Configuration
# ==========================================
BOT_PORT=9000

# ==========================================
# Frontend Configuration
# ==========================================
# API URL for frontend to connect to backend
VITE_API_URL=http://localhost:8000

# ==========================================
# NDAX API Credentials
# ==========================================
# Get these from https://ndax.io/
# REQUIRED for live trading, optional for paper trading
NDAX_API_KEY=
NDAX_API_SECRET=
NDAX_USER_ID=

# ==========================================
# AI Platform APIs
# ==========================================
# HuggingFace - AI model hosting (https://huggingface.co/)
HUGGINGFACE_API_KEY=

# OpenAI - GPT models (https://platform.openai.com/)
OPENAI_API_KEY=

# Amazon MTurk - Crowdsourcing platform
MTURK_ACCESS_KEY=
MTURK_SECRET_KEY=
MTURK_SANDBOX=true

# Appen - Data annotation platform
APPEN_API_KEY=
APPEN_PROJECT_ID=

# RapidAPI - API marketplace
RAPIDAPI_KEY=
RAPIDAPI_HOST=

# ==========================================
# Freelance Platform APIs
# ==========================================
# Upwork - Freelance marketplace
UPWORK_CLIENT_ID=
UPWORK_CLIENT_SECRET=
UPWORK_ACCESS_TOKEN=
UPWORK_REFRESH_TOKEN=

# Fiverr - Gig marketplace
FIVERR_API_KEY=
FIVERR_API_SECRET=

# Freelancer.com
FREELANCER_API_KEY=
FREELANCER_OAUTH_TOKEN=

# ==========================================
# Blockchain/Wallet Configuration
# ==========================================
# Ethereum wallet address (0x...)
WALLET_ADDRESS=

# Private key (KEEP SECURE - never share!)
PRIVATE_KEY=

# Seed phrase (KEEP SECURE - never share!)
WALLET_SEED_PHRASE=

# Network configuration
BLOCKCHAIN_NETWORK=testnet
INFURA_PROJECT_ID=
ALCHEMY_API_KEY=

# ==========================================
# AWS Configuration
# ==========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# ECS/Fargate Configuration
ECS_CLUSTER_NAME=
ECS_SERVICE_NAME=
ECS_TASK_DEFINITION=

# ==========================================
# Payment Processing
# ==========================================
# Stripe - Payment processing
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# ==========================================
# Database Configuration
# ==========================================
# PostgreSQL
DATABASE_URL=postgresql://user:pass@localhost:5432/the_basics
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=the_basics
POSTGRES_USER=
POSTGRES_PASSWORD=

# MongoDB
MONGODB_URI=mongodb://localhost:27017/the_basics
MONGODB_DB=the_basics

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ==========================================
# Security Configuration
# ==========================================
# JWT secret for authentication (generate with: openssl rand -hex 32)
JWT_SECRET=

# Encryption key for credential storage (64 char hex string)
ENCRYPTION_KEY=

# Session secret
SESSION_SECRET=

# API rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ==========================================
# Email Configuration
# ==========================================
# SMTP settings for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# SendGrid API (alternative to SMTP)
SENDGRID_API_KEY=

# ==========================================
# Monitoring & Alerts
# ==========================================
# Webhook for critical alerts (Slack, Discord, etc.)
ALERT_WEBHOOK_URL=

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# CloudWatch
CLOUDWATCH_ENABLED=false
CLOUDWATCH_LOG_GROUP=/the-basics/production

# Sentry error tracking
SENTRY_DSN=

# ==========================================
# Feature Flags
# ==========================================
FEATURE_TRADING_ENABLED=false
FEATURE_AI_PLATFORMS_ENABLED=true
FEATURE_FREELANCE_ENABLED=false
FEATURE_AUTO_APPROVE_ENABLED=false

# ==========================================
# Logging Configuration
# ==========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info
LOG_FILE=.unified-system/logs/system.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# ==========================================
# Deployment Configuration
# ==========================================
# Platform: local, railway, heroku, aws, custom
DEPLOYMENT_PLATFORM=local

# Domain configuration
DOMAIN=localhost
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# ==========================================
# Development Tools
# ==========================================
# Enable debugging
DEBUG=false

# Enable verbose logging
VERBOSE=false

# Enable hot reload
HOT_RELOAD=true

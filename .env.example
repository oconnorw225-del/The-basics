# NDAX Quantum Engine - Environment Configuration
# Copy this file to .env and configure for your environment

# ==========================================
# Node.js Configuration
# ==========================================
NODE_ENV=development
PORT=3000

# ==========================================
# Python Backend Configuration
# ==========================================
PYTHON_PORT=8000

# ==========================================
# Trading Configuration
# ==========================================
# Trading mode: paper (safe testing) or live (real trading)
TRADING_MODE=paper

# Auto-start trading on bot launch (DEFAULT: true for 24/7)
AUTO_START=true

# Maximum concurrent trades
MAX_TRADES=5

# Risk level: low, medium, high
RISK_LEVEL=low

# ==========================================
# 24/7 AUTONOMOUS OPERATION SETTINGS
# ==========================================
# Enable continuous 24/7 operation mode
CONTINUOUS_MODE=true

# Auto-reconnect on disconnection (NO DOWNTIME)
AUTO_RECONNECT=true

# Reconnect interval in milliseconds (5 seconds)
RECONNECT_INTERVAL=5000

# ==========================================
# Bot Configuration
# ==========================================
BOT_PORT=9000

# ==========================================
# Frontend Configuration
# ==========================================
# API URL for frontend to connect to backend
VITE_API_URL=http://localhost:8000

# ==========================================
# NDAX API Credentials (Optional)
# ==========================================
# Get these from https://ndax.io/
# REQUIRED for live trading, optional for paper trading
# NDAX_API_KEY=your_api_key_here
# NDAX_API_SECRET=your_api_secret_here

# ==========================================
# Database Configuration (Optional)
# ==========================================
# DATABASE_URL=postgresql://user:pass@localhost:5432/ndax

# ==========================================
# Security Configuration
# ==========================================
# JWT secret for authentication
# JWT_SECRET=your_secure_random_string_here

# API rate limiting
# RATE_LIMIT_WINDOW=15
# RATE_LIMIT_MAX=100

# ==========================================
# Logging Configuration
# ==========================================
# Log level: DEBUG, INFO, WARN, ERROR, FATAL
LOG_LEVEL=INFO

# Log format: json or text
# LOG_FORMAT=json

# Maximum log file size in bytes (10MB default)
# LOG_MAX_BYTES=10485760

# Number of log backup files to keep
# LOG_BACKUP_COUNT=5

# ==========================================
# System Integration & Monitoring (24/7)
# ==========================================
# Health check interval in milliseconds (30 seconds for continuous monitoring)
HEALTH_CHECK_INTERVAL=30000

# Freeze detection thresholds (seconds)
FREEZE_SOFT_THRESHOLD=60
FREEZE_HARD_THRESHOLD=300

# Error handling configuration
MAX_RETRIES=3
RETRY_BACKOFF_BASE=2.0

# Circuit breaker configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=300

# ==========================================
# Service Features (ALL ENABLED for 24/7)
# ==========================================
# Enable/disable services (DEFAULT: all true for autonomous operation)
BOT_ENABLED=true
FREELANCE_ENABLED=true
AI_ENABLED=true

# Freelance automation settings
AUTO_BID=true
AUTO_EXECUTE=false  # Set to true to enable full automation (requires careful review)

# AI task queue configuration
MAX_CONCURRENT_TASKS=5
TASK_QUEUE_SIZE=100

# API Gateway configuration
API_RATE_LIMIT=100

# ==========================================
# Deployment Configuration
# ==========================================
# Railway, Heroku, or custom deployment
# DEPLOYMENT_PLATFORM=railway
